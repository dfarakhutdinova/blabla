<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MeasurementFragment">

    <!-- TODO: Update blank fragment layout -->

    <View
        android:id="@+id/rectangle_measurement"
        android:layout_width="match_parent"
        android:layout_height="127dp"
        android:background="@drawable/color_small_gradient"
        app:layout_constraintTop_toTopOf="parent">

    </View>


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/nunito_sans"
        android:gravity="center_horizontal"
        android:letterSpacing="0.03"
        android:textColor="@color/my_white"
        android:textSize="25sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_measurement"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_measurement"
        app:layout_constraintHorizontal_bias="0.939"
        app:layout_constraintStart_toStartOf="@+id/rectangle_measurement"
        android:text="Все замеры" />


</androidx.constraintlayout.widget.ConstraintLayout>